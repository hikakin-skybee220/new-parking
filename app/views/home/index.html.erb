

<main>

    <div class="section" id="sct0">
        <div class="bg">
            <img src="/top-bg2_optimized.png" alt="トップ背景画像" class="pc">
            <img src="/top-bg2_optimized_for_tab.png" alt="トップ背景画像" class="tab">
            <img src="/top-bg-sp_optimized.png" alt="トップ背景画像" class="sp">
        </div>
    </div>
    <%#=TOP%>
    <div class="section container-fluid" id="sct1">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 wrapper text-center">
                    <h1 class="top-title">
                        <div class="en main">ORIGINAL PARKING SYSTEM</div>
                        <div class="jn sub">独自の駐車場貸出システム</div>
                    </h1>
                    <div class="row d-flex m-ad">
                        <div class="col-xs-6">
                            <% if current_user %>
                                <a href="/parking/start">
                                    <p>利用を開始する</p>
                                </a>
                            <% else %>
                                <a href="/parking/start" id="user-select-modal-button">
                                    <p>利用を開始する</p>
                                </a>
                            <% end %>
                        </div>
                        <div class="col-xs-6">
                            <% if current_user %>
                                <% if @parking && @parking.finish_stamp == "no" && @parking.finish_on %>
                                    <a href="/purchase/index" id="">
                                        <p>利用を終了する</p>
                                    </a>   
                                <% else %>
                                    <a href="/parking/finish" id="parking-finish-modal-button">
                                        <p>利用を終了する</p>
                                    </a> 
                                <% end %>
                            <% else %>
                                <a href="/parking/start" id="user-select-modal-finish-button">
                                    <p>利用を終了する</p>
                                </a>                                                
                            <% end %>
                        </div>
                    </div>
                </div>            
            </div>
        </div>
    </div>
    <div class="section" id="sct01">
        <div class="bg">
            <img src="/reserve-bg3_optimized.png" alt="予約背景画像" class="pc-res">
        </div>
    </div>
    <%#=TOP%>
    <div class="section container-fluid sct1-1" id="sct1-1">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 wrapper text-center">
                    <h1 class="top-title">
                        <div class="en main">RESERVATION</div>
                        <div class="jn sub">駅近で便利</div>
                    </h1>
                    <div class="d-flex m-ad">
                        <div class="col-xs-12 reserve-button">
                            <% if current_user %>
                                <a href="/reserves/new">
                                    <p>予約する</p>
                                </a>
                            <% else %>
                                <a href="/reserves/new" id="user-select-modal-reserve-button">
                                    <p>予約する</p>
                                </a>
                            <% end %>
                        </div>
                    </div>
                </div>            
            </div>
        </div>
    </div>
    <%#=PRICE DETAILS%>
    <div class="section container-fluid" id="sct2">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 wrapper text-center">
                    <h2>
                        <div class="small-title">PRICE DETAILS</div>
                    </h2>
                    <div class="price-box">
                        <h3>60分 100円</h3>
                        <h3>24時間 最大400円</h3>
                    </div>
                    <div class="attention">
                        <p>※料金は自動で算出されます。</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%#=MAP & APPEARANCE%>
    <div class="section container-fluid" id="sct3">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 wrapper">
                    <div class="admin-box">
                        <img src="/marcel-strauss-PiFwj9Y2ajw-unsplash_optimized.jpg" alt="車の画像" class="up-icon">
                        <div class="admin-title">
                            MA<span class="span-pr-ad">P</span><br>
                            <span class="span-px-ad">&</span><br>
                            <span class="span-pl-ad">A</span>PPEARANCE
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="relative">        
            <img src="/IMG_4192.jpg" alt="駐車場画像">                            
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2216.602671659376!2d139.72858245277416!3d35.79974929849703!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6018930ac30ef1a1%3A0x4bd4d00b16c09534!2z44CSMzMyLTAwMTEg5Z-8546J55yM5bed5Y-j5biC5YWD6YO377yR5LiB55uu77yR!5e0!3m2!1sja!2sjp!4v1610550029095!5m2!1sja!2sjp" class="map" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
        </div>
    </div>

    <%#=NOTICE%>
    <div class="section container-fluid" id="sct4">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 wrapper text-center">
                    <h2>
                        <div class="small-title">NOTICE</div>
                    </h2>
                    <div class="notice-box">
                        <p>
                            駐車場前の道路は一方通行となっております。<br>
                            国道122号線から駐車場に向けて走ることは<br class="sp-none">
                            できないのでご注意ください。<br>
                            案内図を元にお越しください。
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <%#=ADMIN%>
    <div class="section container-fluid" id="sct5">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 wrapper">
                    <div class="admin-box">
                        <img src="/me-icon_optimized.png" alt="" class="up-icon">
                        <div class="admin-title">
                            管理者<span class="span-pr-ad">に</span><br>
                            <span class="span-pl-ad">つ</span>いてよく知る
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="relative">
            <a href="https://shimahika-blog.net/my_page/" target="_blank" rel="noopener noreferrer" class="surround">
                <p class="sub-read">PORTFOLIO</p>
                <img src="/46106870_optimized.dff24e473c8b4e61b5e31ae113f20753.19072300-copy-whiteblack.jpg" alt="ポートフォリオ画像白黒" class="white-black">
                <img src="/46106870_optimized.dff24e473c8b4e61b5e31ae113f20753.19072300-copy.jpg" alt="ポートフォリオ画像">            
            </a>
        </div>
    </div>
</main>


<%# SCROLL TOP BUTTON %>
<div id="scroll_to_top" class="button">
  <i class="far fa-caret-square-up"></i>
</div>

<%#=MODAL%>
    <% if current_user %>
        <div class="parking-finish-modal-wrapper" id="parking-finish-modal">    
            <div class="parking-finish-modal-content">
                <div class="overlay"></div>
                <div class="modal finish-modal">
                    <div class="conteiner text-center">                        
                        <img src="/me-icon_optimized.png" alt="" class="up-icon">
                        <% if @parking.blank? or @parking.finish_stamp == "yes" %>
                            <div class="col-xs-12 text">
                                <div class="bold">何も利用していません。</div>                       
                            </div>  
                        <% elsif @parking.finish_stamp == "no" && @parking.finish_on.blank? %>  
                            <div class="col-xs-12 text">
                                <div class="bold">利用終了を確定してよろしいですか？</div>
                                <p class="black-opa pt-2per">
                                    利用終了確定時刻 : <%=@timedisplay%>
                                </p>                            
                            </div>     
                            <div class="col-xs-12 next-button">
                                <%= link_to("確定する",parking_finish_path, method: :post) %>
                            </div>         
                                                                                        
                        <% end %>
                    </div>
                </div>
            </div>
        </div> 
    <% end %>

<%#=USER-SELECT-MODAL%>
    <div class="user-select-modal-wrapper" id="user-select-modal">    
        <div class="user-select-modal-content">
            <div class="overlay"></div>
            <div class="modal">
                <div class="conteiner text-center">                    
                    <img src="/me-icon_optimized.png" alt="" class="up-icon">
                    <div class="col-xs-12 text">
                        <div class="bold">利用方法を選択する</div>
                        <p class="black-opa">
                            いずれのご利用方法でもクレジットカードの<br class="sp-none">
                            ご登録が必要になります。<br>
                            アカウントを作成することで<br class="sp-none">
                            次回のご利用をスムーズにすることができます。
                        </p>
                    </div>                        
                    <div class="col-xs-12 field up">
                        <a href="/login" class="">
                            <p class="form-for-area">ログイン</p>
                        </a>
                    </div>                                                
                    <div class="col-xs-12 field up">     
                        <a href="/signup" class="">
                            <p class="form-for-area">アカウント作成</p>
                        </a>
                    </div>                        
                    <%#div class="col-xs-6 field right">  
                        <a href="/guest/signup" class="">
                            <p class="form-for-area">ゲスト利用</p>
                        </a>
                    </#div%>                                                                    
                </div>
            </div>
        </div>
    </div> 