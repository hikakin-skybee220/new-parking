<%#=TOP%>
    <div class="section container-fluid pur-done-sct1" id="pur-his-sct1">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 wrapper text-center pr-md-ad">
                    <div class="m-ad pr-bg" id="pr-start-top">
                        <h2 class="pb-2per border-bottom subject">利用一覧</h2>
                        <div class="list">
                            <table>
                                <thead class="text-bold">
                                    <tr>
                                        <th>金額</th>
                                        <th>利用開始日</th>
                                        <th>利用終了日</th>
                                        <th>ステータス</th>                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @parkings.each do |parking| %>
                                        <tr>
                                            <td>¥<%=parking.price%></td>
                                            <td><%= parking.start_on.strftime('%Y年%m月%d日 %H:%M') %></td>
                                            <td>
                                                <% if parking.finish_on %>
                                                <%= parking.finish_on.strftime('%Y年%m月%d日 %H:%M') %>
                                                <% else %>
                                                    利用中
                                                <% end %>
                                            </td>
                                            <td>
                                                <% if parking.finish_stamp == "yes" %>
                                                    支払い済み
                                                <% else %>
                                                    未払い
                                                <% end %>
                                            </td>                                        
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>                                                        
                    </div>
                    <div class="col-xs-12 top-button">
                        <a href="/" class="">
                            トップページに戻る
                        </a>
                    </div>                    
                </div>            
            </div>
        </div>
    </div>


    